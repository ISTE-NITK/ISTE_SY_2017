<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BlueTheme" >

        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#301212</item>

    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#C1000E</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">#E5ED0E</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>
        <item name="windowActionBar">false</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#dd141414</item>
        <item name="sv_showcaseColor">@color/android_blue</item>
        <item name="sv_detailTextColor">@color/android_blue</item>
        <item name="sv_buttonText">@string/tutorial_understood</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetail</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#dd141414</item>
        <item name="sv_showcaseColor">@color/android_blue</item>
        <item name="sv_detailTextColor">@color/android_blue</item>
        <item name="sv_buttonText">@string/tutorial_next</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomDetail</item>
    </style>

    <style name="CustomShowcaseTheme3" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#dd141414</item>
        <item name="sv_showcaseColor">@color/android_blue</item>
        <item name="sv_detailTextColor">@color/android_blue</item>
        <item name="sv_buttonText">@string/tutorial_next</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle3</item>
        <item name="sv_detailTextAppearance">@style/CustomDetail3</item>
    </style>


    <style name="CustomTitle3" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/android_blue</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="CustomDetail3" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/android_blue</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="delay_button">
        <item name="android:textColor">@color/dark_grey_home</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/delay_button_selector</item>
    </style>

    <style name="whiteTextWithShadow">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#55111111</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="delay_spinner_item">
        <item name="android:textColor">@color/dark_grey_home</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/delay_button_selector</item>
    </style>

    <style name="done_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:height">@dimen/normal_button_height</item>
        <item name="android:background">@drawable/done_button_selector</item>
    </style>

    <style name="CustomDetail" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GrayButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/accent</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="StoryButtonStyle" parent="GrayButtonStyle">
        <item name="android:layout_width">@dimen/story_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">25dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="RightStoryButtonStyle" parent="StoryButtonStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="LeftStoryButtonStyle" parent="StoryButtonStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="ClueButtonStyle" parent="GrayButtonStyle">
        <item name="android:layout_width">@dimen/clue_button_width</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="InputTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">#C1000E</item>
    </style>

</resources>
