<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nitk.iste.scotlandyard.DisplayStory"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_stories"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="start|center"
                android:src="@drawable/ic_search_white_48dp"/>
            <TextView
                style="@style/TitleTextStyle"
                android:text="Clues"/>


        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/story1preface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/light_primary"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="Click on 'Show Progress' for the story."
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/story1clue1"
            android:layout_below="@+id/story1preface"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/clue_button_width"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/clue_unlock"
            android:layout_marginTop="50dp"
            android:text="CLUE 1" />

        <Button
            android:id="@+id/story1clue2"
            android:layout_below="@+id/story1preface"
            android:layout_alignParentRight="true"

            android:layout_width="@dimen/clue_button_width"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/clue_unlock"
            android:layout_marginTop="50dp"

            android:text="CLUE 2" />

        <Button
            android:id="@+id/story1clue3"
            android:layout_below="@+id/story1clue1"

            android:layout_width="@dimen/clue_button_width"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/clue_unlock"
            android:layout_marginTop="50dp"

            android:text="CLUE 3" />

        <Button
            android:id="@+id/story1clue4"
            android:layout_below="@id/story1clue2"
            android:layout_alignParentRight="true"

            android:layout_width="@dimen/clue_button_width"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/clue_unlock"
            android:layout_marginTop="50dp"

            android:text="CLUE 4" />

        <Button
            android:id="@+id/story1clue5"
            android:layout_below="@+id/story1clue3"
            android:layout_centerHorizontal="true"

            android:layout_width="@dimen/clue_button_width"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/clue_unlock"
            android:layout_marginTop="50dp"

            android:text="CLUE 5" />

        <Button
            android:id="@+id/story1showprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/ic_done_white_48dp"

            android:layout_marginTop="50dp"

            android:text="Show Progress" />
    </RelativeLayout>


</LinearLayout>