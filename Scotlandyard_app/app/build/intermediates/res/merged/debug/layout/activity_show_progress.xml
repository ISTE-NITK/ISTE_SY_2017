<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_stories"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="start|center"
                android:src="@drawable/ic_forward_white_48dp"/>
            <TextView
                style="@style/TitleTextStyle"
                android:text="Progress"/>


        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.nitk.iste.scotlandyard.ShowProgress" >

            <TextView
                android:id="@+id/preface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="qeqefqefqe"
                android:textColor="@color/primary"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/clue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/preface"
                android:layout_below="@+id/preface"
                android:layout_marginTop="50dp"
                android:textColor="@color/primary"
                android:text="qefqefqef"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/clue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/clue1"
                android:layout_below="@+id/clue1"
                android:layout_marginTop="50dp"
                android:text="asdqefqefq"
                android:textColor="@color/primary"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/clue4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/clue3"
                android:layout_below="@+id/clue3"
                android:layout_marginTop="50dp"
                android:text="qevqevqev"
                android:textColor="@color/primary"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/clue5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/clue4"
                android:layout_below="@+id/clue4"
                android:layout_marginTop="50dp"
                android:text="qevqev"
                android:textColor="@color/primary"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/clue3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/clue2"
                android:layout_below="@+id/clue2"
                android:layout_marginTop="50dp"
                android:text="sadqefqefqef"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary" />

        </RelativeLayout>

    </ScrollView>

</LinearLayout>